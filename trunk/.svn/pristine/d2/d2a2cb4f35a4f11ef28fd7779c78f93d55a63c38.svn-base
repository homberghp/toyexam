DIRNAME:=`basename $(PWD)`
SHEETS=sheets_en.pdf 
HANDOUTS=handout_en.pdf 
HELPFILE=handoutsheets_en.pdf 
PUBLISHDIR=/home/fnd2/public_html/nutscool/slides/
PUBLISHURL=fontysvenlo:/home/pro3/public_html/slides/
TEXDEPDF=/home/hom/bin/texdepdf
PDFLATEX=pdflatex
#
%.pdf : ../%.tex
	$(PDFLATEX) -shell-escape -jobname=$(*F) $<
	$(PDFLATEX) -shell-escape -jobname=$(*F) $<

first: .depend $(SHEETS)

all: first $(HANDOUTS)

handout_en.pdf: ../handoutsheets_en.tex handoutsheets_en.pdf

handoutsheets_en.pdf: ../handoutsheets_en.tex

sheets_en.pdf: ../sheets_en.tex

publish: $(SHEETS) $(HANDOUTS)
	umask 007
	cp $(SHEETS) $(DIRNAME)_$(SHEETS)
	cp $(HANDOUTS) $(DIRNAME)_$(HANDOUTS)
	scp $(DIRNAME)_$(SHEETS) $(DIRNAME)_$(HANDOUTS) $(PUBLISHURL)


.depend: ../*.tex *.tex
	$(TEXDEPDF) ../sheets_en | sed -e 's/^\.\.\///' > .depend
	$(TEXDEPDF) ../handoutsheets_en | sed -e 's/^\.\.\///' >> .depend
	$(TEXDEPDF) ../handout_en | sed -e 's/^\.\.\///' >> .depend


include .depend

clean:
	rm -f *.aux *.log *.vrb *.nav *.out *.snm *.toc *~  sheets_*.pdf

distclean: clean
	rm -rf $(SHEETS) $(HANDOUTS) $(HELPFILE) .cache
